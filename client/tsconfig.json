{
  "compilerOptions": {
    "outDir": "./build",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["dom", "es2015"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": [
    "./src/**/*"
  ]
}
