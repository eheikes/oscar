{
  "compilerOptions": {
    "outDir": "./build",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["dom", "es5", "es2015.promise"],
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "include": [
    "./src/**/*"
  ]
}
